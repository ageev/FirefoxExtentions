{
    "manifest_version": 2,
    "name": "ZAM addon",
    "description": "ZAM automation tool",
    "version": "1.3",
    "homepage_url": "https://github.com/ageev/FirefoxExtentions",
    "icons": {
    "48": "icons/feather.svg"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "storage"
    ],

    "browser_specific_settings": {
        "gecko": {
        "id": "zam@itsec.pro",
        "strict_min_version": "55.0"
        }
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    
    "background": {
        "scripts": ["storage.js", "background.js"]
    }
}